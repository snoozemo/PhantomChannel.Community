    <PackageReference Include="Volo.Abp.Account.Web.OpenIddict" Version="9.1.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI.Theme.LeptonXLite" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PhantomChannel.Community.Application\PhantomChannel.Community.Application.csproj" />
    <ProjectReference Include="..\PhantomChannel.Community.HttpApi\PhantomChannel.Community.HttpApi.csproj" />
    <ProjectReference Include="..\PhantomChannel.Community.EntityFrameworkCore\PhantomChannel.Community.EntityFrameworkCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.Studio.Client.AspNetCore" Version="0.9.25" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Logs\**" />
    <Content Remove="Logs\**" />
    <EmbeddedResource Remove="Logs\**" />
    <None Remove="Logs\**" />
  </ItemGroup>

</Project>
