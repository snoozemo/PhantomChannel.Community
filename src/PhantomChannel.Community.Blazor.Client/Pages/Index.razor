@page "/"
@inherits CommunityComponentBase

<div class="row mb-3">
    <div class="col-xl-6 col-12 d-flex">
        <div class="card h-lg-100 w-100 overflow-hidden">
            <div class="card-body">
                <div class="starting-content pe-5">
                    @if (!CurrentUser.IsAuthenticated)
                    {
                        <h3>@L["Welcome"]</h3>
                        <p class="lead text-muted mb-2">@L["LongWelcomeMessage"]</p>
                        <a href="/authentication/login" class="btn btn-primary mb-4"><i
                                class="fa-solid fa-right-to-bracket me-1"></i><span>@L["Login"]</span></a>
                    }

                    <h4>欢迎</h4>
                </div>
            </div>
        </div>
    </div>

</div>
